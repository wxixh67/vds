function rmb_convert_one(){var t=$("#tool-input").val(),e=parseInt($("input[name='yuan_type']:checked").val());if(""==t)return tips_error("请填写要转换的金额！"),$("#tool-input").focus(),!1;var o=$(".btn-success");o.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",data:{money:t,yuan:e},url:WW_URL+"ajax",success:function(t){1==t.status?(tips_clear(),$("#tool-result").html('<div class="tool-result"><em>'+t.data+"</em></div>"),$(".btn-copy").attr("data-clipboard-text",t.data),$("#tool-result").show()):(tips_error(t.info),$("#tool-input").focus()),o.removeAttr("disabled","disabled")}})}function rmb_convert_multiple(){var t=$("#tool-text").val(),e=parseInt($("input[name='yuan_type']:checked").val());if(""==t)return tips_error("请填写要转换的金额！"),$("#tool-text").focus(),!1;var n=$(".btn-success");n.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",data:{money:t,yuan:e},url:WW_URL+"ajax_multiple",success:function(t){if(1==t.status){tips_clear();for(var e=t.data,o='<table class="table table-bordered"><thead><tr><th>金额</th><th>中文大写</th><th>操作</th></tr></thead><tbody>',a=0;a<e.length;a++)o+='<tr><td style="font-size:1rem;vertical-align: middle;">'+e[a].val+'</td><td style="font-size:1rem;vertical-align: middle;">'+e[a].res+"</td><td>",1==e[a].sta?o+='<button class="btn btn-copyit" data-clipboard-text="'+e[a].res+'">复制大写</button>':o+='<span class="label label-danger">错误</span>',o+="</td></tr>";o+="</tbody></table>",$("#tool-result").html(o),$("#tool-result").show()}else tips_error(t.info),$("#tool-text").focus();n.removeAttr("disabled","disabled")}})}var clipboard_copyit=new Clipboard(".btn-copyit");clipboard_copyit.on("success",function(t){var e=t.trigger.innerHTML;t.trigger.innerHTML="已复制",setTimeout(function(){t.trigger.innerHTML=e},2e3)}),clipboard_copyit.on("error",function(t){alert("复制失败，请手动操作。")}),$(document).ready(function(){$("input[type=radio][name=show_type]").change(function(){show_type=parseInt($("input[name='show_type']:checked").val()),1==show_type?($("#box-one").show(),$("#box-multiple").hide()):($("#box-one").hide(),$("#box-multiple").show()),$("#tool-result").empty()});$("#tool-text").on("input",function(){var t=$(this),e=t.val().split("\n");10<(e=e.filter(function(t){return""!==t.trim()})).length&&t.val(e.slice(0,10).join("\n"))})});