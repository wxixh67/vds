function change(){var r=$("#change");r.attr("disabled","disabled"),$.ajax({type:"GET",url:WW_URL+"ajax",dataType:"json",success:function(a){if(1!=a.status)return $("#chengyu-txt").html(a.info),$("#chengyu-exp").html(""),!1;for(var t="",e=0;e<a.data.word_arr.length;e++)t+="<span><sup>"+a.data.pinyin_arr[e]+"</sup>"+a.data.word_arr[e]+"</span>";return $("#chengyu-txt").html(t),$("#chengyu-exp").html("解释："+a.data.explanation.replace("\n","<br>")+"<br>出处："+a.data.derivation+"<br>示例："+a.data.example),$(".btn-copyit").attr("data-clipboard-text",a.data.word+"\n"+a.data.pinyin+"\n"+a.data.explanation),setTimeout(function(){r.removeAttr("disabled","disabled")},1500),!0}})}var clipboard_copyit=new Clipboard(".btn-copyit");clipboard_copyit.on("success",function(a){var t=a.trigger.value;a.trigger.value="已复制",setTimeout(function(){a.trigger.value=t},2e3)}),clipboard_copyit.on("error",function(a){alert("复制失败，请手动操作。")});