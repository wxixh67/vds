$(document).ready(function(){$("#payment_setting").on("change",function(){""!=$(this).val()?localStorage.setItem("wawa_local_payment_setting",$(this).val()):localStorage.removeItem("wawa_local_payment_setting")});var t=localStorage.getItem("wawa_local_payment_setting");null!=t?$("#payment_setting").val(t):$("#payment_setting").val("预付款/30\n进度款/30\n验收款/30\n质保款/10"),$("#btn-calc").click(function(){var t=$.trim($("#payment_setting").val()),e=$("#total_money").val();if(""==t)return tips_error("请输入付款阶段比例设置！"),$("#payment_setting").focus(),!1;if(""==e)return tips_error("请输入合同总金额！"),$("#total_money").focus(),!1;var n=$(".btn");n.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",data:{payment_setting:t,total_money:e},url:WW_URL+"ajax",success:function(t){if(1==t.status){var e=t.data,a='<div class="table-scroll-x"><table class="table table-bordered" style="font-size: 1rem;">';a+='<tr><td width="150">总金额</td><td class="btn-copyit" data-clipboard-text="'+e.total_money+'">'+e.total_money+"</td></tr>",a+='<tr><td>人民币大写</td><td class="btn-copyit" data-clipboard-text="'+e.total_money_daxie+'">'+e.total_money_daxie+"</td></tr>",a+="</tbody></table></div>",a+='<div class="table-scroll-x"><table class="table table-bordered" style="font-size: 1rem;"><thead><tr><th width="150">名称</th><th width="80">比例</th><th width="150">金额</th><th>人民币大写</th></tr></thead><tbody>',$.each(e.stage_list,function(t,e){a+="<tr><td>"+e.name+"</td><td>"+e.percentage+'%</td><td class="btn-copyit" data-clipboard-text="'+e.money+'">'+e.money+'</td><td class="btn-copyit" data-clipboard-text="'+e.daxie+'">'+e.daxie+"</td></tr>"}),a+="</tbody></table></div>",tips_clear(),$("#time-output").html(a),$("#time-output").show()}else $("#time-output").hide(),tips_error(t.info);n.removeAttr("disabled","disabled")}})});var e=new Clipboard(".btn-copyit");e.on("success",function(t){var e=t.trigger.innerHTML;t.trigger.innerHTML="已复制",setTimeout(function(){t.trigger.innerHTML=e},2e3)}),e.on("error",function(t){alert("复制失败，请手动操作。")})});