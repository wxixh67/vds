$(document).ready(function(){var t={"MMMM D, YYYY":"[月 日,年] (常用)","MMMM Do, YYYY":"[月 序数日,年]","MMM. D, YYYY":"[简写月 日,年]","MMM. Do, YYYY":"[简写月 序数日, 年]"},a={"D, MMMM, YYYY":"[日, 月, 年]","Do, MMMM, YYYY":"[序数日, 月, 年] (常用)","D, MMM., YYYY":"[日, 简写月, 年]","Do, MMM., YYYY":"[序数日, 简写月, 年]"};$("#time-from").val(moment().format("YYYY-MM-DD")),$("#time-from").cxCalendar({startDate:"2000-01-01",endDate:"3000-12-31",type:"date",format:"Y-m-d"}),$("#btn-convert").click(function(){var r=$.trim($("#time-from").val());if(""==r)return tips_error("请输入日期！"),$("#time-from").focus(),!1;if(0==moment(r,["YYYY-MM-DD"],!0).isValid())return tips_error("日期格式错误！"),$("#time-from").focus(),!1;var l='<div class="table-scroll-x"><table class="table"><thead><tr><th width="250">美式</th><th width="250"></th><th>格式说明</th></tr></thead><tbody>';$.each(t,function(t,a){var e=moment(r,"YYYY-MM-DD").format(t);"05"==moment(r,"YYYY-MM-DD").format("MM")&&(e=e.replace(".","")),l+='<tr><td class="table-td">'+e+' <span class="label label-default btn-copyit" data-clipboard-text="'+e+'">复制</span></td><td class="table-td">'+e.toUpperCase()+' <span class="label label-default btn-copyit" data-clipboard-text="'+e.toUpperCase()+'">复制</span></td><td>'+a+"</td></tr>"}),l+="</tbody></table></div>",l+='<div class="table-scroll-x"><table class="table"><thead><tr><th width="250">英式</th><th width="250"></th><th>格式说明</th></tr></thead><tbody>',$.each(a,function(t,a){var e=moment(r,"YYYY-MM-DD").format(t);"05"==moment(r,"YYYY-MM-DD").format("MM")&&(e=e.replace(".","")),l+='<tr><td class="table-td">'+e+' <span class="label label-default btn-copyit" data-clipboard-text="'+e+'">复制</span></td><td class="table-td">'+e.toUpperCase()+' <span class="label label-default btn-copyit" data-clipboard-text="'+e.toUpperCase()+'">复制</span></td><td>'+a+"</td></tr>"}),l+="</tbody></table></div>",tips_clear(),$("#tool-output").html(l),$("#tool-output").show()});var e=new Clipboard(".btn-copyit");e.on("success",function(t){var a=t.trigger.innerHTML;t.trigger.innerHTML="已复制",t.trigger.classList.remove("label-default"),t.trigger.classList.add("label-success"),setTimeout(function(){t.trigger.innerHTML=a,t.trigger.classList.add("label-default"),t.trigger.classList.remove("label-success")},3e3)}),e.on("error",function(t){tips_error("复制失败，请手动操作。")})});