function pinyin_convert(t){var e=$("#tool-text").val(),o=$("input[name='letter_type']:checked").val(),a=$("input[name='letter_blank']:checked").val();if(""==e)return tips_error("请填写要转换的内容！"),$("#tool-text").focus(),!1;if(500<e.length)return tips_error("输入字符长度不能超过500！"),$("#tool-text").focus(),!1;var r=$(".btn-success");r.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",data:{text:e,type:t,letter_type:o,letter_blank:a},url:WW_URL+"ajax",success:function(t){1==t.status?(tips_clear(),$("#tool-result").html(t.data),$("#tool-result").show()):tips_error(t.info),r.removeAttr("disabled","disabled")}})}$("#tool-text").bind("keyup",function(){count_text(this)});