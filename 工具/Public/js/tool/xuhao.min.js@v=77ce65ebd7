$(function(){$("#btn-submit").click(function(){var t=$.trim($("#tool-text").val()),r=parseInt($("#number_start").val())-1,e=parseInt($("#number_unit").val()),i=$("#number_format").val(),l=$("input[name='prefixzero']:checked").val();if(""==t)return tips_error("请填写需要增加序号的文本！每一行为一个项目。"),$("#tool-text").focus(),!1;var n=t.split("\n"),a=n.length,o=String(1+r+(a-1)*e).length,u="",c="",s=0;$.each(n,function(t,n){s=1+r+t*e,1==l&&(s=function(t,n){if(String(t).length>n)return t;return(Array(n).join(0)+t).slice(-n)}(s,o)),c=i.replace("$n",s),u+=c+n+"\n"}),tips_clear(),$("#tool-result").val(u)})});