$(document).ready(function(){$("#exchange_money").on("blur",function(){var e=$(this).val(),t=accounting.unformat(e);$(this).val(t)}),$("#exchange_from").fSelect(),$("#exchange_to").fSelect(),$("#convert").click(function(){var e=$("#exchange_from").val(),t=$("#exchange_to").val(),o=$("#exchange_money").val(),l=$("#is_exchange").prop("checked");if(""==e)return tips_error("请选择需要转换的货币！"),!1;if(""==t||null==t)return tips_error("请选择转换后的货币！"),!1;if(""==o)return tips_error("请填写金额！"),!1;if(10<parseInt(t.length))return tips_error("请选择转换后的货币不能超过10项！"),!1;var i=$("#exchange_from").find("option:selected").text();$("#exchange_to").find("option:selected").text();$.cookie("wawa_huilv_from",e,{expires:365}),$.cookie("wawa_huilv_to",t,{expires:365});var n=$(".btn-success");n.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",data:{from:e,to:t,money:o,is_exchange:l},url:WW_URL+"/ajax_multiple",success:function(e){if(1==e.status){tips_clear();var t=e.data,a='<table class="table table-bordered"><thead><tr><th>结果</th><th>金额</th>';l&&(a+="<th>调换结果</th><th>调换金额</th>"),a+="</tr></thead><tbody>";for(var r=0;r<t.length;r++)a+='<tr><td style="font-size:1rem;vertical-align: middle;">'+o+" "+i+" ≈  "+t[r].val+" "+t[r].code+" "+t[r].name+'</td><td style="font-size:1rem;vertical-align: middle;">'+t[r].val+"</td>",l&&(a+='<td style="font-size:1rem;vertical-align: middle;">'+o+" "+t[r].code+" "+t[r].name+" ≈  "+t[r].val_exc+" "+i+'</td><td style="font-size:1rem;vertical-align: middle;">'+t[r].val_exc+"</td>"),a+="</tr>";a+="</tbody></table>",$("#tool-result").html(a),$("#tool-result").show()}else $("#tool-result").hide(),tips_error(e.info);n.removeAttr("disabled","disabled")}})}),$("#exchange").click(function(){var e=$("#exchange_from").val(),t=$("#exchange_to").val();return""==e?(tips_error("请选择需要转换的货币！"),!1):""==t?(tips_error("请选择转换后的货币！"),!1):($("#exchange_from").val(t),void $("#exchange_to").val(e))})});