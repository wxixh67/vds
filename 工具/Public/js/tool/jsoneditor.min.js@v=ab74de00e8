var container=document.getElementById("jsoneditor"),options={mode:"code",modes:["code","text","tree"],indentation:4,search:!0},editor=new JSONEditor(container,options),json={Name:"JSON Editor",Menu:["格式化","压缩","排序","筛选","修复","撤销","重做","显示模式"],Shortcut:{Search:"Ctrl + F",Replace:"Ctrl + H"},Source:"https://github.com/josdejong/jsoneditor/"};editor.set(json),$(function(){$("#jsoneditor-toggle-full-screen").click(function(){var e=$("#jsoneditor-body");e.hasClass("full-screen")?(e.removeClass("full-screen"),$("#jsoneditor").css({height:"500px"}),$("body").css({"overflow-y":"auto"}),$(this).html("全屏")):(e.addClass("full-screen"),$("#jsoneditor").css({height:"100%"}),$("body").css({"overflow-y":"hidden"}),$(this).html("退出"))})});