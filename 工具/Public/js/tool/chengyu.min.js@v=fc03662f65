function search_chengyu(){var e=$("#tool-text").val();if(""==e)return tips_error("请填写您要查询的成语！"),$("#tool-text").focus(),!1;var t=$(".btn-success");t.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",headers:{"X-CSRF-Token":getCSRFToken()},data:{str:e},url:WW_URL+"ajax",success:function(e){1==e.status?(tips_clear(),res=e.data,html="词语: "+res.name+"<br/>拼音: "+res.pinyin+"<br/>释义: "+res.remark+"<br/>出处: "+res.derivation+"<br/>例子: "+res.example,$("#tool-result").show(),$("#tool-result").html(html)):($("#tool-result").hide(),tips_error(e.info)),t.removeAttr("disabled","disabled")}})}