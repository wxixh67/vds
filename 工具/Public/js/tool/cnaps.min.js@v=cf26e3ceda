$(document).ready(function(){$("select[name='area_pid']").on("change",function(t){var a=$(this).val();$.ajax({type:"post",dataType:"json",data:{area_pid:a},url:WW_URL+"get_city",success:function(t){if(1==t.status){tips_clear(),data_list=t.data;for(var a='<option value="">请选择市/区</option>',e=0;e<data_list.length;e++)a+='<option value="'+data_list[e].cid+'">'+data_list[e].name+"</option>";$("select[name='area_cid']").html(a),$("select[name='area_cid']").removeAttr("disabled","disabled")}else tips_error(t.info)}})}),$("#btn-submit").click(function(){var t=$("select[name='area_pid']").val(),a=$("select[name='area_cid']").val(),e=$("select[name='bank_code']").val(),d=$("input[name='keyword']").val();if(""==e)return tips_error("请选择银行！"),!1;if(""==t)return tips_error("请选择省份/直辖市！"),!1;if(""==a)return tips_error("请选择市/区！"),!1;var s=$(".btn-success");s.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",data:{area_pid:t,area_cid:a,bank_code:e,keyword:d},url:WW_URL+"ajax",success:function(t){if(1==t.status){tips_clear(),data_list=t.data;for(var a="<div class='table-scroll-x'><table class='table'><thead><tr><th>序列</th><th>支行名称</th><th>支行联行号</th><th>总行名称</th><th>总行联行号</th></tr></thead><tbody>",e=0;e<data_list.length;e++)a+="<tr><td>"+(e+1)+"</td><td>"+data_list[e].branch_name+"</td><td>"+data_list[e].branch_code+"</td><td>"+data_list[e].bank_name+"</td><td>"+data_list[e].bank_code+"</td></tr>";a+="</tbody></table></div>",$("#tool-result").show(),$("#tool-result").html(a)}else $("#tool-result").hide(),tips_error(t.info);s.removeAttr("disabled","disabled")}})})});