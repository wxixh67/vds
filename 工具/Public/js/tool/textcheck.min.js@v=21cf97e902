$(function(){$("#btn-diff").click(function(){var t=$("#tool-text1").val(),e=$("#tool-text2").val();if(t.length<=0||e.length<=0)return tips_error("请输入要对比的文本！"),$("#tool-text").focus(),!1;if(2e3<t.length||2e3<e.length)return tips_error("请输入少于2000个字！"),$("#tool-text").focus(),!1;var o=$(this);o.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",data:{text1:t,text2:e},url:WW_URL+"ajax",success:function(t){1==t.status?(tips_clear(),$("#tool-result").html(t.data.text1),$("#tool-result2").html(t.data.text2),$("#tool-result-rate").html(t.data.rate),$("#tool-result-diff").show()):tips_error(t.info),o.removeAttr("disabled","disabled")}})})});