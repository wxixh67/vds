function qrcode_convert(){var e=$("#qrc-text").val(),c=$("#qrc-size").val(),o=$("#qrc-level").val(),r=$("#qrc-minversion").val(),t=$("#qrc-radius").val(),l=$("#qrc-quiet").val(),a=$("#qrc-fill").val(),i=$("#qrc-background").val();if(""==e)return tips_error("请填写内容！"),$("#tool-text").focus(),!1;if(""==c)return tips_error("请填写尺寸！"),$("#tool-size").focus(),!1;if((c=parseInt(c))<100||1e3<c)return tips_error("请填写100~1000px内的尺寸！"),$("#tool-size").focus(),!1;tips_clear();var n={render:"image",ecLevel:o,minVersion:parseInt(r,10),fill:a,background:i,text:e,size:parseInt(c,10),radius:.01*parseInt(t,10),quiet:parseInt(l,10),mode:0};$("#qrcode-output").empty().qrcode(n)}$(".form-input").change(function(){qrcode_convert()});var load_times=0;$("#picker1").colorPick({initialColor:"#000000",paletteLabel:"选择颜色:",allowRecent:!1,palette:["#000000","#34495e","#2c3e50","#1abc9c","#16a085","#2ecc71","#27ae60","#3498db","#2980b9","#9b59b6","#8e44ad","#f1c40f","#f39c12","#e67e22","#d35400","#e74c3c","#c0392b","#ecf0f1","#FFFFFF"],onColorSelected:function(){$("#qrc-fill").val(this.color),this.element.css({backgroundColor:this.color,color:this.color}),2<(load_times+=1)&&qrcode_convert()}}),$("#picker2").colorPick({initialColor:"#FFFFFF",paletteLabel:"选择颜色:",allowRecent:!1,palette:["#000000","#34495e","#2c3e50","#1abc9c","#16a085","#2ecc71","#27ae60","#3498db","#2980b9","#9b59b6","#8e44ad","#f1c40f","#f39c12","#e67e22","#d35400","#e74c3c","#c0392b","#ecf0f1","#FFFFFF"],onColorSelected:function(){$("#qrc-background").val(this.color),this.element.css({backgroundColor:this.color,color:this.color}),2<(load_times+=1)&&qrcode_convert()}});