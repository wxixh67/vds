function show_code(){var t=$("#tool-text").val();if(""==t)return tips_error("请填写您要查询的字符！"),$("#tool-text").focus(),!1;var e=t.substring(0,1),o=e.charCodeAt(0),r="字符 <stong>"+e+"</stong> 对应的ASCII码为 <stong>"+o+"</stong>";$("#tool-result").show().append(r+"<br />"),tips_clear()}function show_key(){var t=$("#tool-text").val();if(""==t)return tips_error("请填写您要查询的ASCII码！"),$("#tool-text").focus(),!1;var e=String.fromCharCode(t);if(""==e)return tips_error("请填写正确的ASCII码！"),$("#tool-text").focus(),!1;var o="ASCII码 <stong>"+t+"</stong> 对应的字符为 <stong>"+e+"</stong>";$("#tool-result").show().append(o+"<br />"),tips_clear()}function native2ascii(){for(var t=document.getElementById("tool-form").value.split(""),e="",o=0;o<t.length;o++){var r=Number(t[o].charCodeAt(0));if(!document.getElementById("ignoreLetter").checked||127<r){var n=r.toString(16);e+="\\u"+(n=new String("0000").substring(n.length,4)+n)}else e+=t[o]}document.getElementById("tool-form").value=e}function ascii2native(){for(var t=document.getElementById("tool-form").value.split("\\u"),e=t[0],o=1;o<t.length;o++){var r=t[o];e+=String.fromCharCode(parseInt("0x"+r.substring(0,4))),4<r.length&&(e+=r.substring(4,r.length))}document.getElementById("tool-form").value=e}