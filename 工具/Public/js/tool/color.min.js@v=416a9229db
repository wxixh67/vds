function showRGB(){for(hexcode="#",x=0;x<3;x++){var r=$("input[name='rgb["+x+"]']").val();if(""==r&&(r="0",$("input[name='rgb["+x+"]']").val(r)),parseInt(r)!=r)return tips_error("请输入数字！"),$("input[name='rgb["+x+"]']").focus(),!1;if(255<r)return tips_error("请输入0-255间的数字"),$("input[name='rgb["+x+"]']").focus(),!1;var o,e="0123456789ABCDEF",t=r%16;o=e.substr(t,1),hexcode+=e.substr(t=(r-t)/16,1)+o}var s="";s+='<span style="color: '+hexcode+";background-color: "+hexcode+';width: 24px;display: inline-block;height: 24px;border: 1px solid #ccc;float: left;margin-right: 5px;"> </span>',s+=hexcode,$("#tool-result").show().html(s),tips_clear()}function show16Color(){var r=$("input[name='color']").val();if("#"==r.substr(0,1)&&(r=r.substring(1)),6!=r.length)return tips_error("请输入正确的十六进制颜色码！"),$("input[name='color']").focus(),!1;for(r=r.toLowerCase(),b=new Array,x=0;x<3;x++)b[0]=r.substr(2*x,2),b[3]="0123456789abcdef",b[1]=b[0].substr(0,1),b[2]=b[0].substr(1,1),b[20+x]=16*b[3].indexOf(b[1])+b[3].indexOf(b[2]);var o=b[20]+","+b[21]+","+b[22],e="";e+='<span style="color: rgb('+o+");background-color: rgb("+o+');width: 24px;display: inline-block;height: 24px;border: 1px solid #ccc;float: left;margin-right: 5px;"> </span>',e+=o,$("#tool-result2").show().html(e),tips_clear()}