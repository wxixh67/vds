var sentence="#sentence";function change(){var e=$("#change");e.attr("disabled","disabled"),$.ajax({type:"GET",url:WW_URL+"ajax",dataType:"json",success:function(t){return 1==t.status?($(sentence).html(t.data.content),$("#title").html("《"+t.data.title+"》"),$("#author").html(t.data.author),$("#explain").html("译文："+t.data.explain),$(".btn-copyit").attr("data-clipboard-text",t.data.content+" -- "+t.data.title+" "+t.data.author),fitty(sentence,{minSize:22,maxSize:40}),setTimeout(function(){e.removeAttr("disabled","disabled")},1500),!0):($(sentence).html(t.info),!1)}})}fitty(sentence,{minSize:22,maxSize:40});var clipboard_copyit=new Clipboard(".btn-copyit");clipboard_copyit.on("success",function(t){var e=t.trigger.value;t.trigger.value="已复制",setTimeout(function(){t.trigger.value=e},2e3)}),clipboard_copyit.on("error",function(t){alert("复制失败，请手动操作。")});