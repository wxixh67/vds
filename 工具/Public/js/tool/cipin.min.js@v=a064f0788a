$(function(){$("#btn-submit").click(function(){var t=$("#tool-text").val(),e=$("input[name='en_type']:checked").val(),n=$("input[name='cn_type']:checked").val(),o=$("input[name='num_type']:checked").val();if(t.length<=0)return tips_error("请输入要翻译的文字！"),$("#tool-text").focus(),!1;if(t.length>WW_MAXLEN)return tips_error("输入字符长度不能超过"+WW_MAXLEN+"！"),$("#tool-text").focus(),!1;var a=$(".btn-success");a.attr("disabled","disabled"),tips_loading(),$.ajax({type:"POST",url:"/cipin/ajax",dataType:"json",data:{text:t,en_type:e,cn_type:n,num_type:o},success:function(t){if(1==t.status){tips_clear();for(var e=t.data,n="",o=0;o<e.length;o++)n+=e[o].word+":"+e[o].count+"<br>";$("#tool-result").html(n),$("#tool-result").show()}else tips_error(t.info);a.removeAttr("disabled","disabled")}})}),$("#input-clear").click(function(){$("#tool-text").val(""),$("#tool-result").val(""),count_text()})});