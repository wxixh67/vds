$(document).ready(function(){$("#from_date").cxCalendar({startDate:"1949-01-01",endDate:"3000-12-31",type:"date",format:"Y-m-d"});var r=$("#from_date"),d=$("#from_type"),s=$("#btn-get-date");s.click(function(){var t=r.val(),a=parseInt(d.val());if(""==t)return tips_error("请填写日期！"),r.focus(),!1;var e=new Date(t);if(1==isNaN(e.getTime()))return tips_error("请填写正确的年月！格式如: 1996-10-10"),r.focus(),!1;s.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",data:{date:t,type:a},url:WW_URL+"ajax",success:function(t){if(1==t.status){tips_clear();var a="";a+="法定退休年龄为: "+t.data.retireage,a+="<br/>退休时间为: "+t.data.result,a+="<br/>延迟月数为: "+t.data.delay+"月",a+="<br/><br/>"+t.data.remark,$("#tool-result").html(a),$("#tool-result").show()}else $("#tool-result").hide(),tips_error(t.info);s.removeAttr("disabled","disabled")}})})});