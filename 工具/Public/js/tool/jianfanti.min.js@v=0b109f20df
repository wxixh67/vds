function chinese_convert(e){var t=$("#tool-text").val();if(""==t)return tips_error("请填写要转换的内容！"),$("#tool-text").focus(),!1;if(t.length>WW_MAXLEN)return tips_error("输入字符长度不能超过"+WW_MAXLEN+"！"),$("#tool-text").focus(),!1;var r=$(".btn-success");r.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",data:{text:t,type:e},url:WW_URL+"ajax",success:function(e){1==e.status?(tips_clear(),$("#tool-result").val(e.data)):tips_error(e.info),r.removeAttr("disabled","disabled")}})}function result_convert(e){var t=$("#tool-result"),r=t.val();if(r.length<=0)return tips_error("请先获得转换结果！"),t.focus(),!1;switch(e){case"del_blank":t.val(del_blank(r));break;case"del_linebreak":t.val(del_linebreak(r));break;default:t.val(del_blank(r))}tips_clear()}var del_blank=function(e){var t=e.split(/\r?\n/);return(t=t.map(function(e){return e.replace(/\s+/g,"")})).join("\n")},del_linebreak=function(e){return e.replace(/(\r\n|\n|\r)/gm," ").replace(/\s+/g," ")};