function pinyin_convert(){var t=$("#tool-text").val(),e=$("input[name='letter_type']:checked").val(),a=$("input[name='yu_type']:checked").val(),n=$("input[name='surname_type']:checked").val(),r=$("input[name='surname_blank_type']:checked").val(),l=$("input[name='name_blank_type']:checked").val();if(""==t)return tips_error("请填写要转换的内容！"),$("#tool-text").focus(),!1;if(t.length>WW_MAXLEN)return tips_error("输入字符长度不能超过"+WW_MAXLEN+"！"),$("#tool-text").focus(),!1;var o=$(".btn-success");o.attr("disabled","disabled"),tips_loading(),$.ajax({type:"post",dataType:"json",data:{text:t,letter_type:e,yu_type:a,surname_type:n,surname_blank_type:r,name_blank_type:l},url:WW_URL+"ajax",success:function(t){1==t.status?(tips_clear(),$("#tool-result").html("<pre>"+t.data+"</pre>"),$("#tool-result").show(),$(".btn-copy").trigger("click")):tips_error(t.info),o.removeAttr("disabled","disabled")}})}$("#tool-text").bind("keyup",function(){count_text(this)});