function check_mobile(t){return!!/^1[1-9][0-9]\d{4,8}$/.test(t)}function search_mobile(){var t=$("#tool-text").val(),o=$("#btn-submit");return""==t?(tips_error("请填写手机号！"),$("#tool-text").focus(),!1):0==check_mobile(t)?(tips_error("请填写正确的手机号！"),$("#tool-text").focus(),!1):(o.attr("disabled","disabled"),tips_loading(),void $.ajax({type:"post",dataType:"json",data:{mob:t},url:WW_URL+"ajax",success:function(t){1==t.status?(tips_clear(),$("#tool-result").show(),$("#tool-result").html(t.data)):($("#tool-result").hide(),tips_error(t.info)),o.removeAttr("disabled","disabled")}}))}