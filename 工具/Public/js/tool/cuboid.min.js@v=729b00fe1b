function round2(r){return Math.round(100*r)/100}function calc(){var r=parseFloat($("#length").val()),t=parseFloat($("#width").val()),a=parseFloat($("#height").val());if(isNaN(r)||isNaN(t)||isNaN(a)||r<=0||t<=0||a<=0)return tips_error("请输入有效的长、宽、高数值！"),!1;var o=2*(r*t+r*a+t*a),l=r*t*a,n="棱长总和: "+round2(4*(r+t+a))+"<br>表面积: "+round2(o)+"<br>体积: "+round2(l);$("#tool-result").html(n),$("#tool-result").show(),tips_clear()}$(document).ready(function(){$("#calc").on("click",calc),$("#height").on("input",calc)});