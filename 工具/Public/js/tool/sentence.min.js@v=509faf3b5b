function change(){var e=$("#change");e.attr("disabled","disabled"),$.ajax({type:"GET",url:WW_URL+"ajax",dataType:"json",success:function(t){return 1==t.status?($("#sentence-txt").html(t.data.sentence),$("#sentence-chn").html(t.data.chinese),$(".btn-copyit").attr("data-clipboard-text",t.data.sentence+"\n"+t.data.chinese),$("#sentence-audio").attr("src","/Data/sentence/"+t.data.id+".mp3"),setTimeout(function(){e.removeAttr("disabled","disabled")},1500),!0):($("#chengyu-txt").html(t.info),$("#chengyu-chn").html(""),!1)}})}var clipboard_copyit=new Clipboard(".btn-copyit");clipboard_copyit.on("success",function(t){var e=t.trigger.value;t.trigger.value="已复制",setTimeout(function(){t.trigger.value=e},2e3)}),clipboard_copyit.on("error",function(t){alert("复制失败，请手动操作。")});var audio=document.getElementById("sentence-audio"),playButton=document.getElementById("play-audio");playButton.addEventListener("click",function(){audio.paused?audio.play().then(function(){playButton.textContent="暂停"}).catch(function(t){console.log("播放失败:",t)}):(audio.pause(),playButton.textContent="播放")}),audio.addEventListener("ended",function(){playButton.textContent="播放"});