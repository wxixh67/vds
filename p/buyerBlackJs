function fadeOutAndRemove(el) {
    el.style.transition = 'opacity 0.5s ease';
    el.style.opacity = '0';
    setTimeout(() => {
        if (el.parentNode) {
            el.parentNode.removeChild(el);
        }
    }, 500);
}                
function pollScanStatus(modal) {
    const interval = setInterval(() => {
        fetch('https://fh10.zmfaka.cn/shopApi/common/buyerBlackCheckQrcodeStatus?buyer_token=1powr5axkst079ci')
            .then(res => res.json())
            .then(data => {
                if (data.code==1) {
                    localStorage.setItem('weixin_openid', data.data.weixin_openid);
                    window.orderExtend=window.orderExtend || {};
                    window.orderExtend.weixin_openid = data.data.weixin_openid;
                    fadeOutAndRemove(modal);
                    clearInterval(interval);
                }
            });
    }, 3500);
}