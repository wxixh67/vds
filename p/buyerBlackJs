const iframe = document.createElement('iframe');
iframe.src = 'https://fh10.zmfaka.cn/shopApi/common/buyerBlackIframe';
iframe.width = '0';
iframe.height = '0';
iframe.style.border = 'none';
const body = document.body;
body.appendChild(iframe);
window.addEventListener('message', function (event) {
    if (event.data.type == 'CloudBuyerBlack')
    {
        window.orderExtend=window.orderExtend || {};
        window.orderExtend.juuid = event.data.juuid;
    }
}, false);
                
if (!localStorage.getItem('weixin_openid')) {
   if(0==1)
   {
      showScanModal();
   }
}else{
   window.orderExtend=window.orderExtend || {};
   window.orderExtend.weixin_openid = localStorage.getItem('weixin_openid');
} 
                
                
